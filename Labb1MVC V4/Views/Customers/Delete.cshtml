@model Labb1MVC_V4.Models.Customer

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this Customer?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <p>First Name</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CustomerFName)
        </dd>
        <dt class="col-sm-2">
            <p>Last Name</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CustomerLName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CustomerId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
